@model IEnumerable<Student>
@{
    ViewBag.Title = "Studentet";
}
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <a asp-controller="Student" asp-action="Create" class="btn btn-primary">Shto</a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            @if (Model.Any())
            {
                <div class="card">
                    <div class="card-body">

                        <h5 class="card-title">Lista me Profesor</h5>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Nr</th>
                                    <th scope="col">First Name</th>
                                    <th scope="col">Last Name</th>
                                    <th scope="col">Age</th>
                                    <th scope="col">Address</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var student in Model)
                                {
                                    <tr>
                                        <th scope="row">@student.Id</th>
                                        <td>@student.FirstName</td>
                                        <td>@student.LastName</td>
                                        <td>@student.Age</td>
                                        <td>@student.Address</td>
                                        <td class="text-center">
                                            <a class="p-1" asp-controller="Student" asp-action="Details" asp-route-id="@student.Id"><i class="bi bi-card-list"></i></a>
                                            <a class="p-1" asp-controller="Student" asp-action="Edit" asp-route-id="@student.Id"><i class="bi bi-pencil"></i></a>
                                            <a class="p-1" asp-controller="Student" asp-action="Delete" asp-route-id="@student.Id"><i class="bi bi-trash"></i></a>
                                        </td>


                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body pb-1">
                        <h5 class="card-title">Per te shtuar student te rinje klikoni mbi butonin Shto</h5>
                    </div>
                </div>

            }
        </div>
    </div>
</div>
