@model IEnumerable<Student>
@{
    ViewBag.Title = "Studentet";
}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <a asp-controller="Student" asp-action="Create" class="btn btn-primary">Shto</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Nr</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Age</th>
                        <th scope="col">Address</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <th scope="row">@student.Id</th>
                            <td>@student.FirstName</td>
                            <td>@student.LastName</td>
                            <td>@student.Age</td>
                            <td>@student.Address</td>
                            <td>
                                <a asp-controller="Student" asp-action="Details" asp-route-id="@student.Id">Details</a>
                                <a asp-controller="Student" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
                                <a asp-controller="Student" asp-action="Delete" asp-route-id="@student.Id">Delete</a>
                            </td>


                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
