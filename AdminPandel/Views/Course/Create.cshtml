@model Course
@{
    ViewBag.Title = "Shto Kurs";
}
<div class="container p-5">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-body">

                <h5 class="card-title">Shto Kurs te ri</h5>
                <form asp-controller="Course" asp-action="Create" method="post">
                    @*<input asp-for="Id" hidden="hidden" value="@id"/>*@
                    <div asp-validation-summary=ModelOnly class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="CourseName" class="form-label">Emri i Kursit</label>
                        <input asp-for="CourseName" class="form-control">
                        <span asp-validation-for="CourseName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <button class="btn btn-primary" type="submit">Shto Kursin</button>
                        <button class="btn btn-outline-primary float-end" asp-controller="Course" asp-action="Index">Kthehu tek Lista</button>
                    </div>
                </form>
            </div>
            </div>
            </div>

        </div>

        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }





