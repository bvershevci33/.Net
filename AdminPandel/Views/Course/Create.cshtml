@model Course
@{
    ViewBag.Title = "Shto Kurs";
}
<div class="container p-5">
    <div class="col-6 offset-3">
        <form asp-controller="Course" asp-action="Create" method="post">
            @*<input asp-for="Id" hidden="hidden" value="@id"/>*@
            <div asp-validation-summary=ModelOnly class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="CourseName" class="form-label">Emri i Kursit</label>
                <input asp-for="CourseName" class="form-control">
                <span asp-validation-for="CourseName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Shto Kursin</button>
            </div>
            <div>
            </div>


        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}





