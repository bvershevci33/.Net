
@model Profesor
@{
    var img = Model.ImgFilePath ?? "defaultUser.png";

}

@if (@Model != null)
{
    <div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                
                     <img src="~/Document/@img" alt="Profesor Img" class="img-fluid rounded-circle">
                     <h3 class="mb-0">Profesori</h3>
                </div>
                <div class="card-body">
                    <h5 class="card-title">@($"{Model.FirstName} {Model.LastName}") </h5>
                    <p class="card-text">@Model.PagaNeto</p>
                    @*<p class="card-text">@Model.CourseId</p>                 *@
                    <p class="card-text">@ViewData["Kursi"]</p>                        
                  
                </div>
            </div>



        </div>
        <div class="col-md-12">
            <a class="btn btn-primary" asp-controller="Profesor" asp-action="Index">Lista e Profesoreve</a>
        </div>

    </div>

    </div>
}
else
{
    <h3>Studenti me Id e dhene nuk ekziston.</h3>    
}