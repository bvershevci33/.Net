
@model List<AssignRoleToUser>


<div class="container">
    <div class="row">
        <div class="col-md-12">
            @if (Model.Any())
            {
                <div class="container">
                    <div class="row">
                        <form method="post">
                            <div asp-validation-summary=ModelOnly class="text-danger"></div>
                            <div class="col-md-4 offset-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">Lista me Role</h5>
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th scope="col"></th>
                                                    <th scope="col">Perdoruesi</th>
                                                </tr>
                                            </thead>
                                            <tbody>

                                                @for (int i = 0; i < Model.Count; i++)
                                                {
                                                    <input asp-for="@Model[i].RoleName" type="hidden" value="@Model[i].RoleName" />
                                                    <input asp-for="@Model[i].UserName" type="hidden" value="@Model[i].UserName" />
                                                    <tr>
                                                        <th scope="row">
                                                            <input asp-for="@Model[i].IsInUser" class="form-check-input" />
                                                        </th>
                                                        <td><label asp-for="@Model[i].IsInUser">@Model[i].RoleName</label></td>
                                                    </tr>

                                                }                                                
                                            </tbody>
                                        </table>


                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 offset-4 d-grid">
                                <button class="btn btn-primary btn-block" type="submit">Ndrysho</button>
                                <a class="btn btn-primary btn-block mt-2" asp-action="GetRolesByUser" asp-route-userName="@ViewBag.UserName">Kthehu te Lista</a>
                            </div>
                        </form>
                    </div>
                </div>               
            }
            else
            {
                <div class="card">
                    <div class="card-body pb-1">
                        <h5 class="card-title">Per te shtuar rol te ri klikoni mbi butonin Shto</h5>
                    </div>
                </div>

            }
        </div>
    </div>
</div>
