@model ApplicationUser
@{
    ViewBag.Title = "Ndrysho te dhenat e perdoruesit";
}
<div class="container">
    <div class="col-8 offset-2">
        <div class="card">
            <div class="card-body">

                <h5 class="card-title">Krijo Llogari</h5>

                <form  asp-controller="User" asp-action="Edit" method="post">
                    @*<input asp-for="Id" hidden="hidden" value="@id"/>*@
                    <div asp-validation-summary=ModelOnly class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="FristName" class="form-label">Emri</label>
                        <input asp-for="FristName" class="form-control">
                        <span asp-validation-for="FristName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="LastName" class="form-label">Mbiemri</label>
                        <input asp-for="LastName" class="form-control">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Address" class="form-label">Adresa</label>
                        <input asp-for="Address" class="form-control">
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="BirthDay" class="form-label">Datelindja</label>
                        <input asp-for="BirthDay" class="form-control">
                        <span asp-validation-for="BirthDay" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label">Email Adresa</label>
                        <input asp-for="Email" class="form-control">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>




                    <div class="mb-3">
                        <button class="btn btn-primary" type="submit">Ruaj ndryshimet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}